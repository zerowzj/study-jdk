<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.6"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.6
          http://maven.apache.org/xsd/assembly-2.6.xsd">
    <id>study-agent-app</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/classes</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>study/jdk/app</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>org.javassist:javassist</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>